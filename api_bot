from pytrends.request import TrendReq
import pandas as pd
import time
startTime = time.time() #variable stores the time of program initiation
pytrend = TrendReq(hl='en-GB', tz=360) #method creates connection to google

colnames = ["Keywords"] #name of column
df = pd.read_csv("trend_keywords_list.csv", names=colnames) #method to start reading from column name colnames
df2 = df["Keywords"].values.tolist()
df2.remove("Keywords")

dataset = []

for x in range(0,len(df2)):
     keywords = [df2[x]]
     pytrend.build_payload(kw_list=keywords, cat=0, timeframe='2020-04-01 2020-05-01', geo='GB')
     data = pytrend.interest_over_time()
     if not data.empty:
          data = data.drop(labels=['isPartial'],axis='columns')
          dataset.append(data)

result = pd.concat(dataset, axis=1)
result.to_csv('search_trends.csv')

executionTime = (time.time() - startTime)
print('Execution time in sec.: ' + str(executionTime))